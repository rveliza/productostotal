<% layout("layouts/boilerplate") %> 

<div class="row">
    <h1 class="text-center">Editar Producto</h1>
    <div class="col-6 offset-3">
        <form action="/productos/<%= producto._id %>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="nombre">Nombre de producto: </label>
                <input class="form-control" type="text" id="nombre" name="producto[nombre]" value="<%= producto.nombre %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="precio">Precio</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">Q</span>
                    <input class="form-control" type="number" id="precio" name="producto[precio]" value="<%= producto.precio %>" required>
                </div>
            </div>
            <div class="mb-3">
                <select name="producto[unidad]" class="form-select" aria-label="Default select example" required>
                    <option value="galon" selected>Gal칩n</option>
                    <option value="litro">Litro</option>
                    <option value="botella">Caneca</option>
                    <option value="caneca">Barril</option>
                  </select>
            </div>
            <div class="mb-3">
                <label class="form-label" for="desc">Descripci칩n: </label>
                <textarea class="form-control" name="producto[desc]" id="desc" cols="30" rows="3" required><%= producto.desc %></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Cargar m치s im치genes: </label>
                <input class="form-control" type="file" name="image" id="image" multiple>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Editar Producto</button>
            </div>
        </form>
    </div>
</div>