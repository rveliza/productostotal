<% layout("layouts/boilerplate") %> 

<div class="row">
    <h1 class="text-center">Editar Producto</h1>
    <div class="col-6 offset-3">
        <form action="/productos/<%= producto._id %>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="nombre">Nombre de producto: </label>
                <input class="form-control" type="text" id="nombre" name="producto[nombre]" value="<%= producto.nombre %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="precio">Precio</label>
                <input class="form-control" type="number" id="precio" name="producto[precio]" value="<%= producto.precio %>">
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Editar Producto</button>
            </div>
        </form>
    </div>
</div>