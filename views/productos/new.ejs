<% layout("layouts/boilerplate") %> 

<div class="row">
    <h1 class="text-center">Crear Producto</h1>
    <div class="col-6 offset-3">
        <form action="/productos" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="nombre">Nombre de producto: </label>
                <input class="form-control" type="text" id="nombre" name="producto[nombre]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="precio">Precio</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">Q</span>
                    <input class="form-control" type="number" id="precio" name="producto[precio]" required>
                </div>
            </div>
            <div class="mb-3">
                <select name="producto[unidad]" class="form-select" aria-label="Default select example" required>
                    <option value="galon" selected>Galón</option>
                    <option value="litro">Litro</option>
                    <option value="botella">Caneca</option>
                    <option value="caneca">Barril</option>
                  </select>
            </div>
            <div class="mb-3">
                <label class="form-label" for="desc">Descripción: </label>
                <textarea class="form-control" name="producto[desc]" id="desc" cols="30" rows="3" required></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label" for="imagen">Dirección de imagen: </label>
                <input class="form-control" type="text" id="imagen" name="producto[imagen]" required>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Crear Producto</button>
            </div>
        </form>
    </div>
</div>


