<% layout("layouts/boilerplate") %> 
<div class="row">
    <div class="col-6>
        <div class="card mb-3">
            <img src="<%= producto.imagen %>" alt="" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title"><%= producto.nombre %></h5>
                <p class="card-text"><%= producto.desc %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><%= producto.precio %> quetzales.</li>
                <li class="list-group-item text-muted">Presentaci√≥n: <%= producto.unidad %></li>
            </ul>
            <div class="card-body">
                <a href="/productos/<%= producto._id %>/edit" class="card-link btn btn-info">Editar Producto</a>
                <form class="d-inline" action="/productos/<%= producto._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Eliminar Producto</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-6">
        <h2>Dejar un comentario</h2>
        <form action="/productos/<%= producto._id %>/reviews" method="POST" novalidate class="mb-3 validated-form">
            <div class="mb-3">
                <label class="form-label" for="rating">Rating</label>
                <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
            </div>
            <div class="mb-3">
                <label class="form-label" for="body">Comentario</label>
                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
            </div>
            <button class="btn btn-success">Enviar</button>
        </form> 
        <% for( let review of producto.reviews ) { %>
            <div class="mb-3">
                <p>Estrellas: <%= review.rating %></p>
                <p>Comentario: <%= review.body %></p>
            </div>
        <% } %>
    </div>
</div>




